{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mtool",
  "version": "1.0.5",
  "identifier": "com.m-tool.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mtool",
        "width": 980,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
